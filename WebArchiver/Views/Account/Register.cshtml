@model WebArchiver.Models.RegisterModel

@{
	ViewData["Title"] = "Register";
}
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
	<div class="containerLogin">
		<label asp-for="Name"><b>Username</b></label>
		<input asp-for="Name" type="text" placeholder="Enter Username" name="uname" required class="nameBox">

		<label asp-for="Email"><b>Email</b></label>
		<input asp-for="Email" type="text" placeholder="Enter Email" name="email" required class="nameBox">

		<label asp-for="Password"><b>Password</b></label>
		<input asp-for="Password" type="password" placeholder="Enter Password" name="psw" required class="nameBox">

		<label asp-for="PasswordConfirmed"><b>Confirmation of password</b></label>
		<input asp-for="PasswordConfirmed" type="password" placeholder="Enter Password again" name="cpsw" required class="nameBox">

		<input type="submit" class="loginButton" value="Register"/>
	</div> 
</form>
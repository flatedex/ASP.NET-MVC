@model WebArchiver.Models.RegisterModel

@{
	ViewData["Title"] = "Register";
}
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
	<div class="containerLogin">
		<label asp-for="Name"><b>Username</b></label>
		<input asp-for="Name" type="text" placeholder="Enter Username" required class="nameBox">

		<label asp-for="Email"><b>Email</b></label>
		<input asp-for="Email" type="text" placeholder="Enter Email" required class="nameBox">

		<label asp-for="Password"><b>Password</b></label>
		<input asp-for="Password" type="password" placeholder="Enter Password" required class="nameBox">

		<label asp-for="PasswordConfirmed"><b>Confirmation of password</b></label>
		<input asp-for="PasswordConfirmed" type="password" placeholder="Enter Password again" required class="nameBox">

		<button type="submit" class="loginButton">Register</button>
	</div> 
</form>
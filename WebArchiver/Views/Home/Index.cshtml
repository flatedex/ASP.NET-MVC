@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="https://unpkg.com/dropzone@5/dist/min/dropzone.min.css" type="text/css" />
<div class="content">
	<div class="converter">
		<h1>
			IZConverter is a small and easy online tool that can compress files, into archives such as 7z, zipx,
			rar, exe and more.
		</h1>
		<h2>

		</h2>
		<form method="post" enctype="multipart/form-data" id="form" data-pasley-validate class="from-horizontal form-label-left">
			<div class="fileDropArea" id="dropzone">
				<div action="/Home/Upload" class="dropzone" id="uploader" style="height:100%; width:100%; background:#d2b087; border:bisque">
					<br />
				</div>
			</div>
		</form>	
		<div class="buttons">
			<form asp-action="SendArchive" asp-controller="Download" method="get">
				<input type="submit" value="Download archive"/> <!-- download -->
			</form>
			<form asp-action="Upload" asp-controller="Home" enctype="multipart/form-data" method="post"> <!-- upload -->
				<input type="file" id="file-button" style="display:none;"/>
				<label for="file-button">Upload from file</label>
				<input type="submit" class="submit_btn"/>
			</form>
		</div>
	</div>
</div>

<script src="~/js/dropzone.min.js"></script>
<script src="~/js/site.js"></script>
<script src="~/js/dragDropHandler.js"></script>